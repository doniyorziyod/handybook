<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SignUpFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/signup_back_button_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:contentDescription="login back button"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/back_ic" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ro'yhatdan o'tish"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardView" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Ism"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/login_email_edit_acet"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signup_ism"
                style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/edit_text_shape"
                android:hint="Ali"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:layout_editor_absoluteX="24dp" />

            <TextView
                android:id="@+id/signup_name_incorrect_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ism noto'g'ri kiritilgan"
                android:textColor="#FF0000"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/login_email_edit_acet"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/login_email_edit_acet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Familiya"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/login_email_edit_acet"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signup_surname_edit_acet"
                style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/edit_text_shape"
                android:hint="Azizov"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:layout_editor_absoluteX="24dp" />

            <TextView
                android:id="@+id/signup_surname_incorrect_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ism noto'g'ri kiritilgan"
                android:textColor="#FF0000"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/login_email_edit_acet"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/login_email_edit_acet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Email"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/login_email_edit_acet"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signup_email_edit_acet"
                style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/edit_text_shape"
                android:hint="abcdef@gmail.com"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:layout_editor_absoluteX="24dp" />

            <TextView
                android:id="@+id/signup_email_incorrect_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ism noto'g'ri kiritilgan"
                android:textColor="#FF0000"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/login_email_edit_acet"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/login_email_edit_acet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Parol"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/login_email_edit_acet"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signup_password_edit_acet"
                style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/edit_text_shape"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:layout_editor_absoluteX="24dp" />

            <TextView
                android:id="@+id/signup_password_incorrect_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ism noto'g'ri kiritilgan"
                android:textColor="#FF0000"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/login_email_edit_acet"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/login_email_edit_acet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Parolni takrorlang"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/login_email_edit_acet"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signup_reenter_password_edit_acet"
                style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/edit_text_shape"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:layout_editor_absoluteX="24dp" />

            <TextView
                android:id="@+id/signup_reenter_password_incorrect_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ism noto'g'ri kiritilgan"
                android:textColor="#FF0000"

                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/login_email_edit_acet"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/login_email_edit_acet" />


            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tasdiqlash tugmasini bosish orqali siz “Maxfiylik siyosati” shartlariga rozilik bildirasiz!"
                app:buttonTint="@color/light_blue" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/signup_signup_mb"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/light_blue"
                android:elevation="0dp"
                android:text="Ro'yhatdan o'tish"
                android:textColor="@color/back_blue"
                android:textSize="16sp"
                app:cornerRadius="9dp"
                app:rippleColor="@color/back_blue" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>