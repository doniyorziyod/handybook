<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="@drawable/backgroundforbook_item"
    android:elevation="5dp">
    <ImageView
        android:id="@+id/book_item_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/bookimage_example"
        android:layout_margin="10dp"
        android:elevation="5dp"/>
    <TextView
        android:id="@+id/book_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/book_item_image"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/book_item_image"
        app:layout_constraintEnd_toEndOf="@id/book_item_image"
        android:text="Ikki eshik orasi"
        android:fontFamily="@font/montserratsemibold"
        android:textColor="@color/back_blue"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/book_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O`tkir Hoshimov"
        app:layout_constraintTop_toBottomOf="@id/book_item_title"
        app:layout_constraintStart_toStartOf="@id/book_item_image" />
    <TextView
        android:id="@+id/book_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/book_item_author"
        android:layout_marginTop="5dp"
        android:text="$ 11.32"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/book_item_image"
        android:textColor="@color/light_blue"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>